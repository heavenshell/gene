<?php if ($this->pageCount): ?>
  <?php if (isset($this->previous)): ?>
    <a href="<?= $this->url(array('page' => $this->previous)); ?>" class="prev_page" rel="prev">Previous</a>
  <?php else: ?>
    <span class="disabled prev_page">Previous</span>
  <?php endif; ?>
  <?php foreach ($this->pagesInRange as $page): ?>
    <?php if (intval($page) === $this->current): ?>
      <span class="current"><?= $page; ?></span>
    <?php else: ?>
      <a href="<?php echo $this->url(array('page' => $page)); ?>"><?= $page; ?></a>
    <?php endif; ?>
  <?php endforeach; ?>

  <?php if (isset($this->next)): ?>
    <a href="<?= $this->url(array('page' => $this->next)); ?>" class="next_page" rel="next">Next</a>
  <?php else: ?>
    <span class="disabled next_page">Next</span>
  <?php endif; ?>
<?php endif; ?>
